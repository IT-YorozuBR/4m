<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Visualizar Checklist - Sistema de Qualidade</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    html, body {
      width: 100%;
      height: 100%;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: #000;
      color: #fff;
      overflow-x: hidden;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 30px;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 40px;
      padding-bottom: 20px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .header-left {
      display: flex;
      flex-direction: column;
      gap: 5px;
    }

    .header-left h1 {
      font-size: 2.5rem;
      color: #FFFFFF;
      font-weight: 600;
    }

    .header-left p {
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.95rem;
    }

    .header-right {
      display: flex;
      gap: 15px;
    }

    .btn {
      background: rgba(255, 255, 255, 0.1);
      color: #FFFFFF;
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 12px 24px;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: all 0.3s ease;
      text-decoration: none;
      font-family: inherit;
    }

    .btn:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }

    .btn-primary {
      background: rgba(0, 150, 255, 0.2);
      border-color: rgba(0, 150, 255, 0.3);
    }

    .btn-primary:hover {
      background: rgba(0, 150, 255, 0.3);
    }

    .form-container {
      background: rgba(30, 30, 30, 0.8);
      border-radius: 12px;
      padding: 30px;
      border: 1px solid rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(10px);
      margin-bottom: 30px;
    }

    .form-section {
      margin-bottom: 40px;
    }

    .form-section:last-child {
      margin-bottom: 0;
    }

    .form-section h2 {
      font-size: 1.5rem;
      color: #FFFFFF;
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
      padding-bottom: 15px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    }

    .form-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .form-group label {
      font-size: 0.9rem;
      color: rgba(255, 255, 255, 0.7);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
      background: rgba(0, 0, 0, 0.5);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      padding: 12px 16px;
      color: #fff;
      font-size: 0.95rem;
      font-family: inherit;
      transition: all 0.3s ease;
    }

    .form-group input:disabled,
    .form-group select:disabled,
    .form-group textarea:disabled {
      opacity: 0.7;
      cursor: not-allowed;
    }

    .form-group textarea {
      resize: vertical;
      min-height: 80px;
    }

    .checkbox-group {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 15px;
      margin-top: 15px;
      padding: 15px;
      background: rgba(0, 0, 0, 0.3);
      border-radius: 8px;
    }

    .checkbox-item {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .checkbox-item input {
      width: 20px;
      height: 20px;
      cursor: pointer;
      accent-color: #0096FF;
    }

    .checkbox-item input:disabled {
      cursor: not-allowed;
      opacity: 0.5;
    }

    .checkbox-item label {
      cursor: pointer;
      color: rgba(255, 255, 255, 0.9);
      margin: 0;
      font-size: 0.95rem;
      text-transform: none;
      font-weight: normal;
      letter-spacing: normal;
    }

    .table-container {
      margin-top: 20px;
      overflow-x: auto;
    }

    .table-container table {
      width: 100%;
      border-collapse: collapse;
      background: rgba(0, 0, 0, 0.3);
      border-radius: 8px;
      overflow: hidden;
    }

    .table-container thead {
      background: rgba(0, 0, 0, 0.5);
    }

    .table-container th {
      padding: 15px;
      text-align: left;
      font-size: 0.85rem;
      color: rgba(255, 255, 255, 0.7);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-weight: 600;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .table-container td {
      padding: 15px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      color: rgba(255, 255, 255, 0.9);
      font-size: 0.95rem;
    }

    .table-container tbody tr:hover {
      background: rgba(255, 255, 255, 0.05);
    }

    .badge {
      display: inline-block;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
      width: fit-content;
    }

    .badge.checked {
      background: rgba(76, 175, 80, 0.2);
      color: #4CAF50;
    }

    .badge.unchecked {
      background: rgba(244, 67, 54, 0.2);
      color: #F44336;
    }

    .badge.rascunho {
      background: rgba(255, 165, 0, 0.2);
      color: #FFA500;
    }

    .badge.pendente {
      background: rgba(33, 150, 243, 0.2);
      color: #2196F3;
    }

    .badge.aprovado {
      background: rgba(76, 175, 80, 0.2);
      color: #4CAF50;
    }

    .badge.rejeitado {
      background: rgba(244, 67, 54, 0.2);
      color: #F44336;
    }

    .actions {
      display: flex;
      gap: 15px;
      margin-top: 40px;
      padding-top: 20px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .loading {
      text-align: center;
      padding: 60px;
      color: rgba(255, 255, 255, 0.5);
    }

    .loading .material-icons {
      font-size: 4rem;
      margin-bottom: 20px;
      color: rgba(255, 255, 255, 0.2);
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .error-container {
      background: rgba(244, 67, 54, 0.1);
      border: 1px solid rgba(244, 67, 54, 0.3);
      border-radius: 12px;
      padding: 40px;
      text-align: center;
      color: #F44336;
    }

    .error-container h2 {
      margin-bottom: 15px;
    }

    .status-badge {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 10px 15px;
      background: rgba(76, 175, 80, 0.2);
      border-radius: 8px;
      color: #4CAF50;
      font-weight: 600;
      margin: 10px 0;
    }

    @media (max-width: 768px) {
      .container {
        padding: 20px;
      }

      .header {
        flex-direction: column;
        align-items: flex-start;
        gap: 20px;
      }

      .header-left h1 {
        font-size: 2rem;
      }

      .header-right {
        width: 100%;
        gap: 10px;
      }

      .form-row {
        grid-template-columns: 1fr;
      }

      .form-container {
        padding: 20px;
      }

      .actions {
        flex-wrap: wrap;
      }

      .table-container {
        font-size: 0.85rem;
      }

      .table-container th,
      .table-container td {
        padding: 10px;
      }
    }
  </style>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="header-left">
        <h1 id="titulo">Visualizar Checklist</h1>
        <p id="subtitulo">Detalhes do checklist FR0062</p>
      </div>
      <div class="header-right">
        <button class="btn" id="btnVoltar">
          <span class="material-icons">arrow_back</span>
          Voltar
        </button>
        <button class="btn btn-primary" id="btnImprimir">
          <span class="material-icons">print</span>
          Imprimir
        </button>
        <button class="btn btn-primary" id="btnBaixar">
          <span class="material-icons">download</span>
          Baixar JSON
        </button>
      </div>
    </div>

    <div id="conteudo">
      <div class="loading" id="loading">
        <span class="material-icons">refresh</span>
        <p>Carregando checklist...</p>
      </div>
    </div>
  </div>

  <script>
    const API_URL = 'http://localhost:3001/api';
    const conteudoDiv = document.getElementById('conteudo');
    const loadingDiv = document.getElementById('loading');
    let checklistData = null;

    document.addEventListener('DOMContentLoaded', function() {
      const params = new URLSearchParams(window.location.search);
      const id = params.get('id');

      if (!id) {
        exibirErro('Checklist não encontrado. ID não foi fornecido.');
        return;
      }

      document.getElementById('btnVoltar').addEventListener('click', () => {
        window.location.href = '4m-checklist.html';
      });

      document.getElementById('btnImprimir').addEventListener('click', imprimirChecklist);
      document.getElementById('btnBaixar').addEventListener('click', () => {
        baixarJSON(checklistData, id);
      });

      carregarChecklist(id);

      document.addEventListener('keydown', function(e) {
        if (e.ctrlKey && e.key === 'p') {
          e.preventDefault();
          imprimirChecklist();
        }
        if (e.key === 'Escape') {
          window.location.href = '4m-checklist.html';
        }
      });
    });

    async function carregarChecklist(id) {
      try {
        const response = await fetch(`${API_URL}/fr0062/${encodeURIComponent(id)}`);
        const result = await response.json();

        if (result.success && result.formulario) {
          checklistData = result.formulario;
          renderizarChecklist(checklistData);
        } else {
          exibirErro(result.message || 'Checklist não encontrado.');
        }
      } catch (error) {
        console.error('Erro ao carregar checklist:', error);
        exibirErro('Erro ao carregar o checklist. Verifique a conexão com o servidor.');
      }
    }

    function renderizarChecklist(data) {
      loadingDiv.style.display = 'none';
      
      const status = data.status || 'rascunho';
      document.getElementById('titulo').textContent = `Checklist ${data.numero_controle}`;
      document.getElementById('subtitulo').textContent = `Criado em ${formatarData(data.data_criacao)}`;

      let html = `
        <div class="form-container">
          <!-- Cabeçalho -->
          <div class="form-section">
            <h2>
              <span class="material-icons">info</span>
              Informações Básicas
            </h2>
            <div class="status-badge">
              <span class="material-icons">check_circle</span>
              ${getStatusLabel(status)}
            </div>
            <div class="form-row">
              <div class="form-group">
                <label>
                  <span class="material-icons">tag</span>
                  Número de Controle
                </label>
                <input type="text" disabled value="${data.numero_controle || ''}">
              </div>
              <div class="form-group">
                <label>
                  <span class="material-icons">person</span>
                  Solicitado por
                </label>
                <input type="text" disabled value="${data.solicitado_por || ''}">
              </div>
              <div class="form-group">
                <label>
                  <span class="material-icons">event</span>
                  Data de Criação
                </label>
                <input type="text" disabled value="${formatarData(data.data_criacao) || ''}">
              </div>
              <div class="form-group">
                <label>
                  <span class="material-icons">update</span>
                  Última Atualização
                </label>
                <input type="text" disabled value="${formatarData(data.data_atualizacao) || ''}">
              </div>
            </div>
          </div>
      `;

      // Cabeçalho do Formulário
      if (data.cabecalho) {
        const cab = data.cabecalho;
        html += `
          <div class="form-section">
            <h2>
              <span class="material-icons">description</span>
              Cabeçalho do Formulário
            </h2>
            <div class="form-row">
              <div class="form-group">
                <label>Equipamento</label>
                <input type="text" disabled value="${cab.equipamento || ''}">
              </div>
              <div class="form-group">
                <label>Local</label>
                <input type="text" disabled value="${cab.local || ''}">
              </div>
              <div class="form-group">
                <label>Responsável</label>
                <input type="text" disabled value="${cab.responsavel || ''}">
              </div>
              <div class="form-group">
                <label>Turno</label>
                <input type="text" disabled value="${cab.turno || ''}">
              </div>
            </div>
          </div>
        `;
      }

      // Mudanças 4M
      if (data.mudancas_4m && data.mudancas_4m.length > 0) {
        html += `
          <div class="form-section">
            <h2>
              <span class="material-icons">settings</span>
              Mudanças 4M
            </h2>
            <div class="checkbox-group">
        `;
        
        data.mudancas_4m.forEach(mudanca => {
          html += `
            <div class="checkbox-item">
              <input type="checkbox" id="mudanca_${mudanca.id}" disabled ${mudanca.selecionado ? 'checked' : ''}>
              <label for="mudanca_${mudanca.id}">${mudanca.nome || ''}</label>
            </div>
          `;
        });
        
        html += `
            </div>
          </div>
        `;
      }

      // Lista de Verificação
      if (data.lista_verificacao && data.lista_verificacao.length > 0) {
        html += `
          <div class="form-section">
            <h2>
              <span class="material-icons">checklist</span>
              Lista de Verificação
            </h2>
            <div class="table-container">
              <table>
                <thead>
                  <tr>
                    <th>Categoria</th>
                    <th>Item</th>
                    <th>Status</th>
                    <th>Observação</th>
                  </tr>
                </thead>
                <tbody>
        `;

        data.lista_verificacao.forEach(item => {
          const statusClass = item.marcado ? 'checked' : 'unchecked';
          const statusLabel = item.marcado ? 'Verificado' : 'Não Verificado';
          
          html += `
            <tr>
              <td>${item.categoria || '-'}</td>
              <td>${item.item || '-'}</td>
              <td><span class="badge ${statusClass}">${statusLabel}</span></td>
              <td>${item.observacao || '-'}</td>
            </tr>
          `;
        });

        html += `
                </tbody>
              </table>
            </div>
          </div>
        `;
      }

      html += `</div>`;

      conteudoDiv.innerHTML = html;
    }

    function getStatusLabel(status) {
      const labels = {
        'rascunho': 'Rascunho',
        'pendente': 'Pendente de Aprovação',
        'aprovado': 'Aprovado',
        'rejeitado': 'Rejeitado'
      };
      return labels[status] || 'Desconhecido';
    }

    function formatarData(dataString) {
      try {
        const data = new Date(dataString);
        return data.toLocaleDateString('pt-BR', {
          day: '2-digit',
          month: '2-digit',
          year: 'numeric',
          hour: '2-digit',
          minute: '2-digit'
        });
      } catch {
        return dataString;
      }
    }

    function imprimirChecklist() {
      if (!checklistData) return;
      
      const printWindow = window.open('', '', 'height=600,width=900');
      let printHTML = `
        <html>
        <head>
          <title>Checklist ${checklistData.numero_controle}</title>
          <style>
            body { font-family: Arial, sans-serif; padding: 20px; }
            h1 { color: #333; text-align: center; }
            .section { margin: 30px 0; padding: 20px; border: 1px solid #ddd; }
            .section h2 { color: #0066cc; border-bottom: 2px solid #0066cc; padding-bottom: 10px; }
            table { width: 100%; border-collapse: collapse; margin: 15px 0; }
            th { background: #f0f0f0; padding: 10px; text-align: left; border: 1px solid #ddd; }
            td { padding: 10px; border: 1px solid #ddd; }
            .checked { background: #e8f5e9; }
            .unchecked { background: #ffebee; }
          </style>
        </head>
        <body>
          <h1>Checklist FR0062: ${checklistData.numero_controle}</h1>
          <p><strong>Solicitado por:</strong> ${checklistData.solicitado_por}</p>
          <p><strong>Data:</strong> ${formatarData(checklistData.data_criacao)}</p>
      `;

      if (checklistData.cabecalho) {
        printHTML += `
          <div class="section">
            <h2>Cabeçalho</h2>
            <p><strong>Equipamento:</strong> ${checklistData.cabecalho.equipamento}</p>
            <p><strong>Local:</strong> ${checklistData.cabecalho.local}</p>
            <p><strong>Responsável:</strong> ${checklistData.cabecalho.responsavel}</p>
            <p><strong>Turno:</strong> ${checklistData.cabecalho.turno}</p>
          </div>
        `;
      }

      if (checklistData.lista_verificacao && checklistData.lista_verificacao.length > 0) {
        printHTML += `
          <div class="section">
            <h2>Lista de Verificação</h2>
            <table>
              <tr>
                <th>Categoria</th>
                <th>Item</th>
                <th>Status</th>
                <th>Observação</th>
              </tr>
        `;

        checklistData.lista_verificacao.forEach(item => {
          const rowClass = item.marcado ? 'checked' : 'unchecked';
          const statusLabel = item.marcado ? '✓ Verificado' : '✗ Não Verificado';
          
          printHTML += `
            <tr class="${rowClass}">
              <td>${item.categoria || '-'}</td>
              <td>${item.item || '-'}</td>
              <td>${statusLabel}</td>
              <td>${item.observacao || '-'}</td>
            </tr>
          `;
        });

        printHTML += `</table></div>`;
      }

      printHTML += `
          <script>window.print(); window.close();</script>
        </body>
        </html>
      `;

      printWindow.document.write(printHTML);
      printWindow.document.close();
    }

    function baixarJSON(data, numeroControle) {
      if (!data) return;
      
      const dataStr = JSON.stringify(data, null, 2);
      const dataBlob = new Blob([dataStr], { type: 'application/json' });
      const url = URL.createObjectURL(dataBlob);
      const link = document.createElement('a');
      link.href = url;
      link.download = `checklist-${numeroControle}-${new Date().getTime()}.json`;
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
      URL.revokeObjectURL(url);
    }

    function exibirErro(mensagem) {
      loadingDiv.style.display = 'none';
      conteudoDiv.innerHTML = `
        <div class="error-container">
          <h2>❌ Erro ao carregar o checklist</h2>
          <p>${mensagem}</p>
          <button class="btn" onclick="window.location.href='4m-checklist.html'" style="margin-top: 20px;">
            <span class="material-icons">arrow_back</span>
            Voltar para Listagem
          </button>
        </div>
      `;
    }
  </script>
</body>
</html>
